{% extends 'partials/base.html.twig' %}


{% block content %}
    {#<h1>{{ page.title }}</h1>#}
    {#<b>{{ page.header.features1 }}</b>#}
    {#{{ page.content }}#}
    <section class="contact-us">
        <div class="container">
            {#<ul class="breadcrumbs d-flex">#}
                {#<li><a href="#">О компании</a></li>#}
                {#<li>Контакты</li>#}
            {#</ul>#}
            <!-- /breadcrumbs -->
            <div class="row">
                <div class="col-md-6 contacts-item m-auto">
                    <h1 class="title title-lg text-center">Контакты</h1>
                    <div class="sub-title text-center">
                        <p>Вы можете позвонить нам или написать на почту</p>
                    </div>
                    <div class="contacts d-flex flex-column align-items-center">
                        <div class="phone-item">
                            <div class="phone-item-wrap d-flex align-items-center">
                                <i class="icon icon-smartphone"></i>
                                <div class="phones d-flex flex-column">
                                    <span>+38 (068) 767-44-44</span>
                                    <span>+38 (068) 767-99-99</span>
                                </div>
                            </div>
                        </div>
                        <!-- /phone-item -->
                        <div class="phone-item">
                            <div class="phone-item-wrap d-flex align-items-center">
                                <i class="icon icon-smartphone"></i>
                                <div class="phones d-flex flex-column">
                                    <span>+38 (050) 325-22-22</span>
                                    <span>+38 (050) 325-44-44</span>
                                </div>
                            </div>
                        </div>
                        <!-- /phone-item -->
                    </div>
                </div>
                <!-- /contacts-item -->
                <div class="col-md-6 contacts-item m-auto">
                    <div class="contact-form">
                        <h1 class="title title-lg text-center">Остались вопросы?</h1>
                        <div class="sub-title text-center">
                            <p>Оставьте заявку и наш менеджер свяжется</p>
                            <p>с Вами в ближайшее время</p>
                        </div>
                        <form>
                            <div class="form-group">
                                <label class="icon icon-user"></label>
                                <input type="text" class="form-control"  placeholder="Ваше имя*">
                            </div>
                            <div class="form-group">
                                <label class="icon icon-smartphone"></label>
                                <input class="form-control" type="tel" placeholder="Ваш телефон*">
                            </div>
                            <div class="form-group" type="email">
                                <label class="icon icon-email"></label>
                                <input class="form-control" placeholder="Ваша почта">
                            </div>
                            <button type="submit" class="btn btn-lg btn-block">Отправить</button>
                        </form>
                        <!-- /form -->
                    </div>
                </div>
                <!-- /contacts-item -->
            </div>
        </div>
    </section>
    <!-- /delivery -->
{% endblock %}
